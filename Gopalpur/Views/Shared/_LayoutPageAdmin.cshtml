<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <!-- include summernote css/js -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote.js"></script>

    <style>
        .logo {
            width: 70%;
            height: 70%;
            align-content: center;
        }
        .footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            background-color: black;
            color: white;
            text-align: center;
            z-index: 99999;
        }

        .note-toolbar {
            background-color: lightgray;
        }

        .panel-heading {
            background-color: lightgray;
        }

        body {
            background-color: white;
            overflow-x: hidden;
            overflow-y: scroll;
            padding: 0px;
        }

        .bg-light {
            background-color: white;
            transition: 0.5s;
        }
            .bg-light:hover {
                box-shadow: 0px 1.2091898428053205vh 1.8137847642079807vh rgb(0,0,0);
            }

        .nav {
            border-radius: 15px;
        }
        .nav-link:hover{
           background-color:rgba(0,0,0,0.4);
           text-decoration-color:white;
           border-radius:10px;
        }
        .nav-link {
            width: 125px;
            padding: 5px;
            text-align: center;
            transition: 1s;
        }
        

    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg bg-light navbar-light justify-content-center">
        <a class="navbar-brand" href="/"><img src="/Content/img/logo1.png" class="logo" /></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    @Html.ActionLink("Content", "Index", "Post/Index", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item dropdown">
                    @Html.ActionLink("Category", "Index", "Category/Index", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item dropdown">
                    @Html.ActionLink("Sub-Category", "Index", "Sub/Index", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item dropdown">
                    @Html.ActionLink("Gallery", "Add", "Garden1", null, new { @class="nav-link"})
                </li>
                <li class="nav-item dropdown">
                    @Html.ActionLink("Register", "Register", "Admin", null, new { @class = "nav-link" }) 
                </li>
             
                <li class="nav-item dropdown">
                    @Html.ActionLink("Logout", "Logout", "Admin", null, new { @class = "nav-link" })
                </li>
            </ul>
        </div>
    </nav>
    <br>

    <div class="container-fluid">
        @RenderBody()
    </div>

</body>
</html>
